{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",

    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "useDefineForClassFields": true,
    "isolatedModules": true,

    "baseUrl": "."
  },
  "include": ["./src"]
}
